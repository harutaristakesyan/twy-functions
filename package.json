{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication and identity Lambda functions",
  "scripts": {
    "build": "tsc",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "migrate": "ts-node -P tsconfig.scripts.json -r tsconfig-paths/register ./src/migration/run-migrations.ts",
    "lint:commit": "commitlint --edit",
    "lint": "eslint . --ext .ts,.js --report-unused-disable-directives",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.908.0",
    "@aws-sdk/client-ssm": "^3.913.0",
    "@aws-sdk/dsql-signer": "^3.916.0",
    "@middy/core": "^6.4.5",
    "@middy/event-normalizer": "^6.4.5",
    "@middy/http-error-handler": "^6.4.5",
    "@middy/http-event-normalizer": "^6.4.5",
    "@middy/http-json-body-parser": "^6.4.5",
    "aws-cdk-lib": "^2.220.0",
    "axios": "^1.12.2",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/format": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@types/aws-lambda": "^8.10.152",
    "@types/http-errors": "^2.0.5",
    "@types/node": "^22.18.1",
    "@types/pg": "^8.15.5",
    "conventional-changelog-atom": "^5.0.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.34.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-sql": "^3.2.2",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
